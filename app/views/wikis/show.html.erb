<h1><%= @wiki.title %></h1>
<small>Created by <%= @wiki.user.email %></small>

<div class="row">
  <div class="col-md-8">
      <p><%= @markdown.render(@wiki.body).html_safe %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% if current_user.role == 'admin' || current_user == @wiki.user %>
      <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <% end %>
    <% if @wiki.private? %>
      <%= render partial: 'collaborators/collaborator', locals: {collaborator: Collaborator.new, wiki: @wiki} %>
    <% end %>
  </div>
</div>
