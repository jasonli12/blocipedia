<h1>All Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    <% if current_user.role == 'standard' %>
      <%= link_to "Upgrade to Premium", new_charge_path, class: 'btn btn-primary' %>
    <% else %>
      <%= link_to "Downgrade to Standard", downgrades_path, method: :post, class: 'btn btn-danger', data: {confirm: 'Prepared to be standardized? All of your private wikis will become public!'} %>
    <% end %>
  </div>
</div>
